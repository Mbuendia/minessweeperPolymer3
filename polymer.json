{
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "entrypoint": "index.html",
  "shell": "src/buscaminas-app/buscaminas-app.js",
  "sources": [
    "src/**.js",
    "manifest/**",
    "package.json"
  ],
